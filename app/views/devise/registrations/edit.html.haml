.row
  %h2.text-center Edit #{resource_name.to_s.humanize}
.row
  = form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal', html: { method: :put }) do |f|
    = devise_error_messages!
    .form-group
      = f.label :name, class: 'control-label'
      %br/
      = f.text_field :name, autocomplete: "off", class: 'form-control'
    .form-group
      = f.label :last_name, class: 'control-label'
      %br/
      = f.text_field :last_name, autocomplete: "off", class: 'form-control'
    .form-group
      = f.label :email, class: 'control-label'
      %br/
      = f.email_field :email, autofocus: true, class: 'form-control'
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    .form-group
      = f.label :password, class: 'control-label'
      %i (leave blank if you don't want to change it)
      %br/
      = f.password_field :password, autocomplete: "off", class: 'form-control'
    .form-group
      = f.label :password_confirmation, class: 'control-label'
      %br/
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
    .form-group
      = f.label :current_password, class: 'control-label'
      %i (we need your current password to confirm your changes)
      %br/
      = f.password_field :current_password, autocomplete: "off", class: 'form-control'
    .form-group
      = f.submit "Update", class: 'btn btn-primary'
.row
  %h3 Cancel my account
  %p
    Unhappy?
    = button_to "Cancel my account", registration_path(resource_name), class: 'btn btn-danger', data: { confirm: "Are you sure?" }, method: :delete
  = link_to "Back", :back

.row.profile
  .col-md-3
    .profile-sidebar
      / SIDEBAR USERPIC
      .profile-userpic
        %img.img-responsive{:alt => "", :src => "http://s3.amazonaws.com/37assets/svn/765-default-avatar.png"}
      / END SIDEBAR USERPIC
      / SIDEBAR USER TITLE
      .profile-usertitle
        .profile-usertitle-name
          = @user.full_name
        .profile-usertitle-job
          User
      / END SIDEBAR USER TITLE
      / SIDEBAR BUTTONS
      .profile-userbuttons
        %button.btn.btn-success.btn-sm{:type => "button"} Follow
        %button.btn.btn-danger.btn-sm{:type => "button"} Message
      / END SIDEBAR BUTTONS
      / SIDEBAR MENU
      .profile-usermenu
        %ul.nav
          %li.active
            %a{:href => "#"}
              %i.glyphicon.glyphicon-home
              Overview
          %li
            %a{:href => "#"}
              %i.glyphicon.glyphicon-user
              Account Settings
          %li
            %a{:href => "#", :target => "_blank"}
              %i.glyphicon.glyphicon-ok
              Tasks
          %li
            %a{:href => "#"}
              %i.glyphicon.glyphicon-flag
              Help
      / END MENU
  .col-md-9
    .profile-content
      Some user related content goes here...

= form_for @record_type do |f|
  - if @record_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@record_type.errors.count, "error")} prohibited this record_type from being saved:"
      %ul
        - @record_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'

= form_for @record do |f|
  - if @record.errors.any?
    #error_explanation
      %h2= "#{pluralize(@record.errors.count, "error")} prohibited this record from being saved:"
      %ul
        - @record.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :record_type
    = f.text_field :record_type
  .field
    = f.label :qt
    = f.text_field :qt
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
